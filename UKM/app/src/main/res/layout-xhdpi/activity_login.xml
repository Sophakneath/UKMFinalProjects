<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/mainColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="LOGIN"
        android:textColor="@color/whitey"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        />

    <View
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:background="@drawable/line_shape"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="210dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/email"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="22dp"
            android:textColor="@color/whitey"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:hint="abc@gmail.com"
        android:backgroundTint="#C1C1C1"
        android:textColorHint="@color/hintColor"
        android:backgroundTintMode="src_over"
        android:paddingBottom="17dp"
        android:textColor="@color/whitey"
        android:id="@+id/email"
        android:textSize="22dp"
        android:textCursorDrawable="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/locker"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="22dp"
            android:textColor="@color/whitey"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:hint="**********"
        android:backgroundTint="#C1C1C1"
        android:textColorHint="@color/hintColor"
        android:backgroundTintMode="src_over"
        android:paddingBottom="17dp"
        android:textColor="@color/whitey"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:textSize="22dp"
        android:textCursorDrawable="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/infos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password. Need Help?"
            android:textSize="22dp"
            android:textColor="@color/whitey"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/forgotPassword"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_login"
        android:textColor="@color/whitey"
        android:textSize="20dp"
        android:id="@+id/login"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member ? Sign up"
        android:textSize="20dp"
        android:textColor="@color/whitey"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:id="@+id/gotosignup"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blurr"
            android:id="@+id/blurr"
            android:visibility="gone"
            android:layout_centerVertical="true">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:indeterminateDrawable="@drawable/progresscolor"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>