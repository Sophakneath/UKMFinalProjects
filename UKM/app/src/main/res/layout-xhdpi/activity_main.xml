<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    android:background="@color/mainColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F8F8F8">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <View
               android:layout_width="match_parent"
               android:layout_height="230dp"
               android:background="@color/mainColor"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               android:orientation="horizontal"
               android:padding="10dp"
               android:gravity="center"
               android:id="@+id/top">

               <ImageView
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:src="@drawable/menu"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/menu"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="KAIROS"
                   android:textSize="30dp"
                   android:textColor="@color/primaryColor"
                   android:textStyle="bold"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:fontFamily="sans-serif-smallcaps"/>

               <ImageView
                   android:id="@+id/searchView"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginRight="10dp"
                   android:src="@drawable/search" />
           </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Categories"
               android:textSize="22dp"
               android:textStyle="bold"
               android:textColor="@color/whitey"
               android:layout_below="@+id/top"
               android:layout_marginLeft="20dp"
               android:id="@+id/medium"
               />

           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/medium"
               android:scrollbars="none"
               android:layout_marginTop="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingLeft="13dp"
                   android:paddingRight="13dp">

                   <android.support.v7.widget.CardView
                       android:id="@+id/main_career_card"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipChildren="false"
                       android:clipToPadding="false"
                       android:divider="@android:color/transparent"
                       android:dividerHeight="0.0px"
                       android:elevation="8dp"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="7dp"
                       app:cardPreventCornerOverlap="false"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:paddingBottom="23dp">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="30dp"
                               android:paddingTop="23dp"
                               android:paddingRight="30dp"
                               android:src="@drawable/work_70dp_xhdpi" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:gravity="center"
                               android:text="Career"
                               android:textColor="@color/colorSecondaryText"
                               android:textSize="18dp"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </android.support.v7.widget.CardView>

                   <android.support.v7.widget.CardView
                       android:id="@+id/main_scholar_card"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipChildren="false"
                       android:clipToPadding="false"
                       android:divider="@android:color/transparent"
                       android:dividerHeight="0.0px"
                       android:elevation="8dp"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="7dp"
                       app:cardPreventCornerOverlap="false"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:paddingBottom="23dp">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="30dp"
                               android:paddingTop="23dp"
                               android:paddingRight="30dp"
                               android:src="@drawable/study_70dp_xhdpi" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:gravity="center"
                               android:text="Scholarship"
                               android:textColor="@color/colorSecondaryText"
                               android:textSize="18dp"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </android.support.v7.widget.CardView>

                   <android.support.v7.widget.CardView
                       android:id="@+id/main_event_card"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipChildren="false"
                       android:clipToPadding="false"
                       android:divider="@android:color/transparent"
                       android:dividerHeight="0.0px"
                       android:elevation="8dp"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="7dp"
                       app:cardPreventCornerOverlap="false"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:paddingBottom="23dp">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="30dp"
                               android:paddingTop="23dp"
                               android:paddingRight="30dp"
                               android:src="@drawable/event_70dp_xhdpi" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:gravity="center"
                               android:text="Events"
                               android:textColor="@color/colorSecondaryText"
                               android:textSize="18dp"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </android.support.v7.widget.CardView>

                   <android.support.v7.widget.CardView
                       android:id="@+id/main_compete_card"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipChildren="false"
                       android:clipToPadding="false"
                       android:divider="@android:color/transparent"
                       android:dividerHeight="0.0px"
                       android:elevation="8dp"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="7dp"
                       app:cardPreventCornerOverlap="false"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:paddingBottom="23dp">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="30dp"
                               android:paddingTop="23dp"
                               android:paddingRight="30dp"
                               android:src="@drawable/competition_70dp_xhdpi" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:gravity="center"
                               android:text="Competition"
                               android:textColor="@color/colorSecondaryText"
                               android:textSize="18dp"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </android.support.v7.widget.CardView>

                   <android.support.v7.widget.CardView
                       android:id="@+id/main_intern_card"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:clipChildren="false"
                       android:clipToPadding="false"
                       android:divider="@android:color/transparent"
                       android:dividerHeight="0.0px"
                       android:elevation="8dp"
                       app:cardCornerRadius="8dp"
                       app:cardElevation="7dp"
                       app:cardPreventCornerOverlap="false"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:paddingBottom="23dp">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="30dp"
                               android:paddingTop="23dp"
                               android:paddingRight="30dp"
                               android:src="@drawable/internship_70dp_xhdpi" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:gravity="center"
                               android:text="Internship"
                               android:textColor="@color/colorSecondaryText"
                               android:textSize="18dp"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </android.support.v7.widget.CardView>

               </LinearLayout>
           </HorizontalScrollView>
       </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Opportunities"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/mainTextColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Posts"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/hintColor"
            android:layout_marginTop="20dp"
            android:id="@+id/noPosts"
            android:visibility="gone"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:visibility="visible"
            android:overScrollMode="always">

            <!-- Adding 3 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        app:itemTextColor="@color/whitey"
        app:itemIconTint="@color/primaryColor"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        android:id="@+id/nav"
        app:theme="@style/Drawer"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>