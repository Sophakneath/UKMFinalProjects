<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/top"
        android:background="@color/mainColor">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_xhdpi"
            android:layout_marginLeft="10dp"
            android:id="@+id/label"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Setting"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/check_xhdpi"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:id="@+id/check"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:background="@color/whitey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileCon"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:background="@drawable/profile_circle"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:src="@drawable/default_users"
                    android:id="@+id/profile"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="180dp"
                    android:id="@+id/edit"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@color/whiteIcons"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/camera"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="22dp"
                android:textColor="@color/mainTextColor"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/users"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="22dp"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Hello"
                android:backgroundTint="@color/primaryTextColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTintMode="src_over"
                android:paddingBottom="17dp"
                android:textColor="@color/mainTextColor"
                android:id="@+id/users"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/email"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="22dp"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="abc@gmail.com"
                android:backgroundTint="@color/primaryTextColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTintMode="src_over"
                android:paddingBottom="17dp"
                android:textColor="@color/mainTextColor"
                android:id="@+id/email"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More About You"
                android:textSize="22dp"
                android:textColor="@color/mainTextColor"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/nationality"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:textSize="22dp"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Cambodian"
                android:backgroundTint="@color/primaryTextColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTintMode="src_over"
                android:paddingBottom="17dp"
                android:textColor="@color/mainTextColor"
                android:id="@+id/nation"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/position_blue_30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workplace"
                    android:textSize="22dp"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Google"
                android:backgroundTint="@color/primaryTextColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTintMode="src_over"
                android:paddingBottom="17dp"
                android:textColor="@color/mainTextColor"
                android:id="@+id/workplace"
                android:textSize="22dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/p"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Career"
                    android:textSize="22dp"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:hint="Manager"
                android:backgroundTint="@color/primaryTextColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTintMode="src_over"
                android:paddingBottom="17dp"
                android:textColor="@color/mainTextColor"
                android:id="@+id/p"
                android:layout_marginBottom="20dp"
                android:textSize="22dp"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>