<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCategoriesActivity"
    android:orientation="vertical"
    android:background="@color/whitey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/mainColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:id="@+id/top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:id="@+id/label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25dp"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginRight="43dp"
                android:id="@+id/title"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/work_30dp"
            android:layout_below="@+id/top"
            android:layout_centerHorizontal="true"
            android:id="@+id/cat"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yours Posts"
        android:textSize="18dp"
        android:textColor="@color/mainTextColor"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/otherPosts"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Posts"
        android:background="@drawable/button_login"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:textColor="@color/whitey"
        android:textSize="13dp"
        android:elevation="6dp"
        android:layout_marginTop="10dp"
        android:id="@+id/countPosts"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Posts"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/hintColor"
            android:layout_marginTop="20dp"
            android:id="@+id/noPosts"
            android:visibility="gone"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:visibility="visible">

            <!-- Adding 3 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

                <include layout="@layout/items_place_holder" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>